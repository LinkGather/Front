{
  "extends": "@ecubelabs/tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@libs/*": ["app/libs/*"],
      "@components": ["app/components"],
      "@containers": ["app/containers"],
      "@screens": ["app/screens"],
      "@routes": ["app/routes"],
      "@models": ["app/models"],
      "@configs": ["app/configs"],
      "@repositories": ["app/repositories"],
      "@hooks": ["app/hooks"],
      "@services": ["app/services"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  },
  "include": ["src", "@types"],
  "exclude": ["node_modules"]
}
